<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="style/Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:background">@color/colorBackGround</item>
        <item name="android:windowBackground">@color/colorBackGround</item>
        <item name="android:colorBackground">@color/colorBackGround</item>

        <item name="android:textViewStyle">@style/TextViewStyle</item>
        <item name="android:editTextStyle">@style/TextEditStyle</item>
        <item name="android:textAppearance">@style/TextEditStyle</item>
        <item name="android:textAppearanceMedium">@style/TextEditStyle</item>
        <item name="buttonStyle">@style/ButtonStyle</item>

        <item name="android:alertDialogTheme">@style/HackersDialogTheme</item>
        <!--<item name="android:alertDialogStyle">@style/YourDialogStyle</item>-->
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="TextViewStyle" parent="android:Widget.TextView">
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:shadowColor">@color/colorBackGround</item>
        <item name="android:fontFamily">monospace</item>
    </style>

    <style name="TextViewStyleTitle" parent="android:Widget.TextView">
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/colorTextTitle</item>
        <item name="android:shadowColor">@color/colorBackGround</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15dp</item>
        <item name="android:fontFamily">monospace</item>
    </style>

    <style name="TextViewStyleWarningSmall" parent="android:Widget.TextView">
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/colorTextWarning</item>
        <item name="android:shadowColor">@color/colorBackGround</item>
        <item name="android:textSize">9dp</item>
        <item name="android:fontFamily">monospace</item>
    </style>

    <style name="TextEditStyleValue" parent="android:Widget.TextView">
        <item name="android:textColor">@color/colorValueText</item>
        <item name="android:shadowColor">@color/colorBackGround</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textSize">12dp</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="textHardwareName" parent="android:Widget.TextView">
        <item name="android:textColor">@color/colorValueText</item>
        <item name="android:shadowColor">@color/colorBackGround</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextEditStyle" parent="android:Widget.EditText">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:shadowColor">@color/colorBackGround</item>
        <item name="android:fontFamily">monospace</item>
    </style>

    <style name="ButtonStyle" parent="android:Widget.Button">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:background">@drawable/btn_style</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:soundEffectsEnabled">false</item>
    </style>

    <style name="ButtonStylePositive" parent="android:Widget.Button">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:background">@drawable/btn_style_positive</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:soundEffectsEnabled">false</item>
    </style>

    <style name="ButtonStyleNegative" parent="android:Widget.Button">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:background">@drawable/btn_style_negative</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:soundEffectsEnabled">false</item>
    </style>

    <!-- Alert Dialog Stuff -->

    <style name="HackersDialogTheme">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowTitleStyle">@style/MyAlertDialogTitle</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:shadowColor">@color/colorShadow</item>
        <item name="android:fontFamily">monospace</item>

        <!-- If you don't want your own button bar style use
                @android:style/Holo.Light.ButtonBar.AlertDialog
                and
                ?android:attr/borderlessButtonStyle
             instead of @style/MyButtonBar and @style/MyBorderlessButton -->
        <!--<item name="android:buttonBarStyle">@style/MyButtonBar</item>-->
        <item name="android:buttonBarButtonStyle">@style/ButtonStyle</item>
    </style>
    <style name="MyAlertDialogTitle">
        <item name="android:background">@color/transparent</item>
        <item name="android:color">@color/colorAccent</item>
    </style>


</resources>
