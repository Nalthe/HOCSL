<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <ImageView
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:id="@+id/software_i_icon"
        android:layout_marginRight="5dp"
        android:src="@mipmap/antivirus" />

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:id="@+id/description"
        android:src="@mipmap/question"
        android:baselineAlignBottom="false"
        android:cropToPadding="false"
        android:contextClickable="false"
        android:background="@color/transparent"
        android:layout_gravity="center_vertical" />

    <TextView
        style="@style/TextEditStyleValue"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/software_i__name"
        android:textStyle="bold"
        android:layout_gravity="center_vertical"
        android:textSize="10dp" />

    <TextView
        style="@style/TextEditStyleValue"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/software_i_level"
        android:layout_gravity="center_vertical" />

    <Button
        style="@style/ButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:text="@string/txt_uninstall"
        android:id="@+id/btn_software_i_action" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="right">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="@string/txt_upgrade"
            android:id="@+id/btn_software_i_upgrade"
            style="@style/ButtonStyle"
            android:layout_marginRight="5dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                style="@style/TextEditStyleValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 days 3:55:12"
                android:id="@+id/software_i_finishin"
                android:visibility="visible"
                android:gravity="center"
                android:textSize="10dp"
                android:layout_gravity="center" />

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/software_i_finbar"
                android:layout_gravity="center" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>