<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    tools:context=".commandCenter">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frame_main"
        android:layoutDirection="ltr"
        android:visibility="visible">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:background="@color/transparentRed"
            android:id="@+id/guilds_myguilds_no_guild"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/no_guild"
                android:id="@+id/textView95"
                android:layout_gravity="center_horizontal"
                android:textSize="12dp"
                android:textAlignment="center"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp" />

            <Button
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="@string/txt_search_guilds"
                android:id="@+id/guild_search_guilds"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp" />

            <Button
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="@string/btn_create_guild"
                android:id="@+id/btn_guild_create_guild"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:id="@+id/guilds_my_guild"
            android:visibility="visible">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="65"
                android:background="@drawable/remote_connection_window">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Guild Name"
                    android:id="@+id/mg_guild_name"
                    android:textAlignment="center"
                    android:textColor="@color/gold"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Guild Slogan Guild Slogan Guild Slogan "
                    android:id="@+id/mg_guild_slogan"
                    android:layout_gravity="center_horizontal"
                    android:textSize="12dp"
                    android:textColor="@color/colorValueText"
                    android:layout_marginBottom="10dp"
                    android:textAlignment="center" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/txt_style_section">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:id="@+id/imageView10"
                        android:src="@mipmap/guild"
                        android:background="@color/transparent" />

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="3"
                        android:background="@color/transparent"
                        android:rowCount="7"
                        android:alignmentMode="alignBounds">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tit_bank"
                            android:id="@+id/textView21"
                            android:textSize="11dp"
                            android:layout_column="0"
                            android:layout_row="2" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="0"
                            android:id="@+id/guild_hc"
                            android:textSize="12dp"
                            android:textColor="@color/colorValueText"
                            android:layout_marginLeft="10dp"
                            android:layout_row="2"
                            android:layout_column="1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tit_ddos_mitigation"
                            android:id="@+id/textView99"
                            android:textSize="11dp"
                            android:layout_column="0"
                            android:layout_row="0" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="0"
                            android:id="@+id/mg_guild_ddosmit"
                            android:textSize="12dp"
                            android:textColor="@color/colorValueText"
                            android:layout_marginLeft="10dp"
                            android:layout_row="0"
                            android:layout_column="1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tit_bandwidth_util"
                            android:id="@+id/textView100"
                            android:textSize="11dp"
                            android:layout_column="0"
                            android:layout_row="1" />

                        <ProgressBar
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/mg_guild_bandwidth"
                            android:layout_row="1"
                            android:layout_column="1"
                            android:background="@color/transparent"
                            android:indeterminate="false"
                            android:layout_gravity="fill_horizontal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tit_guild_leader"
                            android:id="@+id/textView102"
                            android:textSize="11dp"
                            android:layout_column="0"
                            android:layout_row="3" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="0"
                            android:id="@+id/mg_guild_leader"
                            android:textSize="12dp"
                            android:textColor="@color/colorValueText"
                            android:layout_marginLeft="10dp"
                            android:layout_row="3"
                            android:layout_column="1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tit_datacenter_ip"
                            android:id="@+id/textView132"
                            android:textSize="11dp"
                            android:layout_column="0"
                            android:layout_row="4" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="0"
                            android:id="@+id/mg_guild_ip"
                            android:textSize="12dp"
                            android:textColor="@color/colorValueText"
                            android:layout_marginLeft="10dp"
                            android:layout_row="4"
                            android:layout_column="1" />

                    </GridLayout>

                </LinearLayout>

                <ScrollView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/scrollView14"
                    android:background="@color/transparent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/tit_news"
                        android:id="@+id/mg_guild_news"
                        android:textSize="11dp"
                        android:layout_column="0"
                        android:layout_row="6"
                        android:layout_columnSpan="2"
                        android:textColor="@color/btnSelected"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/txt_style_section" />
                </ScrollView>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/remote_connection_window">

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/horizontalScrollView2"
                        android:background="@color/transparent">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:background="@color/transparent"
                            android:paddingBottom="12dp">

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@android:string/search_go"
                                android:id="@+id/guild_search_guilds2"
                                android:layout_marginRight="5dp" />

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/txt_requests_ph"
                                android:id="@+id/btn_guild_requests"
                                android:layout_marginRight="5dp" />

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/txt_sales"
                                android:id="@+id/guild_business"
                                android:layout_marginRight="5dp" />

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/txt_protection"
                                android:id="@+id/guild_buy_protection" />
                        </LinearLayout>
                    </HorizontalScrollView>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="35"
                android:background="@drawable/remote_connection_window">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tit_members_ph"
                    android:id="@+id/mg_guild_member_count"
                    android:textSize="11dp"
                    android:layout_column="0"
                    android:layout_row="0" />

                <ListView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/gm_lv_members"
                    android:background="@color/transparent" />

                <ListView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/gm_lv_requests"
                    android:background="@color/transparent" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@color/transparent"
        android:id="@+id/frame_loading"
        android:visibility="gone"
        android:gravity="center" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Loading ..."
            android:id="@+id/textView85"
            android:layout_gravity="center" />
    </LinearLayout>
</LinearLayout>