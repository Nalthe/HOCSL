<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tit_connected_to"
            android:id="@+id/textView37"
            android:layout_marginRight="10dp"
            android:textSize="10dp"
            android:background="@color/transparent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="000.000.000.000"
            android:id="@+id/ct_ip"
            android:background="@color/transparent"
            android:textSize="10dp"
            android:textColor="@color/btnSelected"
            android:layout_marginRight="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tit_tracing"
            android:layout_marginRight="10dp"
            android:textSize="10dp"
            android:background="@color/transparent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_not_being_traced"
            android:id="@+id/ct_trace"
            android:background="@color/transparent"
            android:textSize="10dp"
            android:textColor="@color/colorTextWarning"
            android:layout_marginRight="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/general_msg"
            android:background="@color/transparent"
            android:textSize="10dp"
            android:textColor="@color/btnSelected"
            android:layout_marginRight="20dp" />

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/general_progress"
            android:background="@color/transparent"
            android:visibility="gone" />
    </LinearLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent">

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/scrollView3"
            android:layout_alignParentRight="false"
            android:layout_toLeftOf="@+id/connection_tools"
            android:layout_alignParentLeft="true"
            android:background="@drawable/remote_connection_window">

            <LinearLayout
                android:orientation="vertical"
                android:background="@color/transparent"
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/ct_frame_login"
                    android:background="@color/transparent"
                    android:visibility="gone">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:background="@color/transparent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:id="@+id/ct_remote_guild"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/bronze" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="GATEWAY NAME"
                            android:id="@+id/ct_login_name"
                            android:background="@color/transparent"
                            android:textSize="16dp"
                            android:textColor="@color/btnSelected"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/transparent">

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:id="@+id/ct_login_logo"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="5dp"
                            android:src="@drawable/globe"
                            android:background="@color/transparent" />

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:background="@color/transparent"
                            android:layout_marginLeft="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/crack_twice"
                                android:id="@+id/textView49"
                                android:background="@color/transparent"
                                android:textSize="10dp"
                                android:textColor="@color/colorTextWarning"
                                android:layout_marginRight="20dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/txt_up_pc"
                                android:id="@+id/textView83"
                                android:background="@color/transparent"
                                android:textSize="8dp"
                                android:textColor="@color/dim_foreground_disabled_material_dark"
                                android:layout_marginRight="20dp" />

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/transparent"
                                android:layout_marginLeft="5dp">

                                <TextView
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/tit_reputation"
                                    android:id="@+id/textView50"
                                    android:layout_marginRight="10dp"
                                    android:textSize="10dp"
                                    android:background="@color/transparent" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="UNKNOWN"
                                    android:id="@+id/ct_rep"
                                    android:background="@color/transparent"
                                    android:textSize="10dp"
                                    android:textColor="@color/btnSelected"
                                    android:layout_marginRight="20dp" />
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/transparent"
                                android:layout_marginLeft="5dp" >

                                <TextView
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/_message"
                                    android:id="@+id/textView54"
                                    android:layout_marginRight="10dp"
                                    android:textSize="10dp"
                                    android:background="@color/transparent" />

                            </LinearLayout>

                            <ScrollView
                                android:layout_width="match_parent"
                                android:layout_height="80dp"
                                android:id="@+id/scrollView7"
                                android:layout_gravity="center_horizontal"
                                android:background="@color/transparent">

                                <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="60dp"
                                    android:text="UNKNOWN"
                                    android:id="@+id/ct_remote_msg"
                                    android:background="@drawable/remote_connection_window"
                                    android:textSize="10dp"
                                    android:textColor="@color/btnSelected"
                                    android:layout_marginRight="20dp"
                                    android:scrollIndicators="right" />
                            </ScrollView>

                        </LinearLayout>
                    </LinearLayout>

                    <EditText
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/ct_login_password"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:hint="Access Password"
                        android:inputType="textNoSuggestions"
                        android:textAlignment="center" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:text="Login"
                        android:id="@+id/ct_login_login"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ct_frame_menu"
                    android:background="@color/transparent"
                    android:baselineAligned="false"
                    android:visibility="visible"
                    android:paddingTop="10dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="fill_parent"
                            android:layout_height="100dp"
                            android:background="@color/transparent"
                            android:gravity="top|center"
                            android:id="@+id/app_hardware">

                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:id="@+id/icon_hardware"
                                android:src="@drawable/hardware"
                                android:background="@drawable/txt_style_section" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/txt_hardware"
                                android:id="@+id/label_hardware" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="fill_parent"
                            android:layout_height="100dp"
                            android:background="@color/transparent"
                            android:gravity="top|center"
                            android:id="@+id/app_db">

                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:id="@+id/icon_db"
                                android:background="@drawable/txt_style_section"
                                android:src="@drawable/database" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/txt_database"
                                android:id="@+id/label_db" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="fill_parent"
                            android:layout_height="100dp"
                            android:background="@color/transparent"
                            android:gravity="top|center"
                            android:id="@+id/app_files">

                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:id="@+id/icon_files"
                                android:src="@drawable/file_manager"
                                android:background="@drawable/txt_style_section" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/txt_file_manager"
                                android:id="@+id/label_files" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="fill_parent"
                            android:layout_height="100dp"
                            android:background="@color/transparent"
                            android:gravity="top|center"
                            android:id="@+id/app_log" >

                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:id="@+id/icon_log"
                                android:src="@drawable/log_icon"
                                android:background="@drawable/txt_style_section" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/txt_log"
                                android:id="@+id/label_log" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/remote_connection_window"
                            android:gravity="center"
                            android:id="@+id/frame_db_search">

                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/db_query"
                                android:layout_weight="1"
                                android:hint="@string/txt_db_record_name" />

                            <ImageView
                                android:layout_width="33dp"
                                android:layout_height="33dp"
                                android:id="@+id/btn_search_database"
                                android:src="@android:drawable/ic_menu_search"
                                android:tint="@color/btnSelected"
                                android:background="@color/transparent" />

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:id="@+id/frame_db_save"
                            android:background="@drawable/remote_connection_window"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:id="@+id/btn_db_back"
                                android:src="@android:drawable/ic_media_previous"
                                android:tint="@color/btnSelected"
                                android:background="@color/transparent" />

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:id="@+id/db_row_name"
                                android:layout_gravity="center_vertical"
                                android:textColor="@color/colorValueText"
                                android:textStyle="bold"
                                android:textSize="13dp"
                                android:visibility="visible"
                                android:layout_weight="1"
                                android:gravity="center_vertical" />

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/txt_save"
                                android:id="@+id/btn_save_row" />
                        </LinearLayout>

                        <ListView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/rt_list"
                            android:background="@color/transparent" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/ct_frame_auth"
                    android:background="@drawable/remote_connection_window">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GATEWAY NAME"
                        android:id="@+id/ct_auth_name"
                        android:background="@color/transparent"
                        android:textSize="16dp"
                        android:textColor="@color/btnSelected"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:layout_marginBottom="10dp">

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/ct_auth_password"
                            android:hint="Access Password"
                            android:inputType="textNoSuggestions"
                            android:textAlignment="center"
                            android:layout_weight="1" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Login"
                            android:id="@+id/ct_auth_login" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:layout_marginLeft="5dp" >

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="@string/tit_support"
                            android:id="@+id/textView122"
                            android:layout_marginRight="10dp"
                            android:textSize="10dp"
                            android:background="@color/transparent" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="160dp"
                        android:text="UNKNOWN"
                        android:id="@+id/ct_auth_msg"
                        android:background="@drawable/remote_connection_window"
                        android:textSize="10dp"
                        android:textColor="@color/btnSelected"
                        android:layout_marginRight="20dp"
                        android:scrollIndicators="right" />

                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="85dp"
            android:layout_height="fill_parent"
            android:background="@color/transparent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:id="@+id/connection_tools">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="@string/txt_disconnect"
                android:id="@+id/btn_disconnect"
                android:textSize="10dp"
                android:background="@drawable/btn_style_negative" />

            <ListView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rc_software_list"
                android:background="@color/transparent"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>