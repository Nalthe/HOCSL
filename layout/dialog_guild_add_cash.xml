<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/remote_connection_window">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/header_add_hc_guild"
        android:id="@+id/textView133"
        android:textColor="@color/foreground_material_dark"
        android:textStyle="bold"
        android:textSize="14dp"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:layout_marginBottom="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/add_hc"
            android:id="@+id/gb_add_hc"
            android:layout_weight="1"
            android:textSize="11dp"
            android:layout_gravity="center_vertical" />

        <SeekBar
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/gac_switch_adder"
            android:splitTrack="false"
            android:max="50000"
            android:indeterminate="false"
            android:layout_gravity="center_vertical" />

    </LinearLayout>

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/txt_add"
        android:id="@+id/btn_gb_add_hc"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="15dp" />

</LinearLayout>